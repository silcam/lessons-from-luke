<form action='/create' method='post'>
    <div>
        <p>
            <label>
                Source Language: 
                <select name="sourceLang">
                    {{#sourceLangs}}
                        <option value="{{.}}">
                            {{.}}
                        </option>
                    {{/sourceLangs}}
                </select>
            </label>
        </p>

        <p>
            <input type='text' name='targetLang' placeholder='Target Language' />
        </p>
    </div>
</form>