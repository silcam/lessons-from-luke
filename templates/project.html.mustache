<style>
    th {
        font-weight: normal;
    }
    td {
        font-size: small;
        padding: 4px 8px;
    }
</style>

<div id="project">
    <a href="/">&lt;&lt; Home </a>
    <h2>{{targetLang}}</h2>
    <h3 class="subdued">{{projectId}}</h3>
    <a href="/translate/{{projectCode}}" target="_blank">
        <h3>Translate</h3>
    </a>

    <table>
        <tbody>
            {{#lessons}}
                <tr>
                    <th>{{lesson}}</th>
                    <td class="subdued">[{{sourceLang}} v{{version}}]</td>
                    <td class="progress">
                        <span class="{{extraProgressClass}}">
                            {{progress}}%
                        </span>
                    </td>
                    <td>
                        <a href="/documents/translation/{{projectId}}/{{lesson}}">
                            Download
                        </a>
                    </td>
                </tr>
            {{/lessons}}
        </tbody>
    </table>
</div>