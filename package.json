{
  "name": "lessons-from-luke",
  "version": "1.0.0",
  "description": "Translate Lessons from Luke into your language",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts",
    "build-desktop": "yarn build && yarn build-x64 && yarn build-x86",
    "build-x64": "pkg . --out-path desktop/ -t win,mac,linux && yarn mvDesktopBinaries",
    "build-x86": "pkg . -o desktop/win32/lessons-from-luke.exe -t win-x86",
    "deploy": "yarn shipit production deploy",
    "mvDesktopBinaries": "mv desktop/lessons-from-luke-linux* desktop/linux/lessons-from-luke && mv desktop/lessons-from-luke-win.exe desktop/windows/lessons-from-luke.exe && mv desktop/lessons-from-luke-macos* desktop/macos/lessons-from-luke",
    "serve": "node dist/server/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-server\"",
    "watch-desktop": "concurrently -k -p \"[{name}]\" -n \"Typescript,Server,Desktop\" -c \"yellow.bold,green.bold,magenta.bold\" \"yarn watch-ts\" \"yarn watch-server\" \"yarn watch-run-desktop\"",
    "watch-run-desktop": "cd desktop/dev && NODE_ENV=development nodemon ../../dist/desktopServer --watch ../../dist",
    "watch-server": "nodemon dist/server/server.js --watch dist",
    "test": "NODE_ENV=test jest --runInBand",
    "test-watch": "yarn test --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/silcam/lessons-from-luke.git"
  },
  "author": "Rick Conrad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/silcam/lessons-from-luke/issues"
  },
  "homepage": "https://github.com/silcam/lessons-from-luke#readme",
  "dependencies": {
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/express-fileupload": "^0.4.0",
    "@types/jest": "^24.0.11",
    "@types/mockdate": "^2.0.0",
    "@types/mustache": "^0.8.32",
    "@types/node": "^11.11.7",
    "@types/string-similarity": "^3.0.0",
    "@types/supertest": "^2.0.7",
    "axios": "^0.19.0",
    "body-parser": "^1.18.3",
    "cookie-session": "^1.3.3",
    "express": "^4.16.4",
    "express-fileupload": "^1.0.0",
    "immutability-helper": "^3.0.1",
    "libxmljs2": "^0.21.1",
    "mustache": "^3.0.1",
    "string-similarity": "^3.0.0",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "jest": "^24.5.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.18.10",
    "pkg": "^4.4.0",
    "shipit-cli": "^4.2.0",
    "shipit-deploy": "^4.1.4",
    "shipit-shared": "^4.4.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0"
  },
  "bin": "dist/desktopServer.js",
  "pkg": {
    "assets": [
      "public/*",
      "templates/*"
    ]
  }
}
