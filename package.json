{
  "name": "lessons-from-luke",
  "version": "1.0.0",
  "description": "Translate Lessons from Luke into your language",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts",
    "deploy": "yarn shipit production deploy",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js --watch dist",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "NODE_ENV=test jest --runInBand",
    "test-watch": "yarn test --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/silcam/lessons-from-luke.git"
  },
  "author": "Rick Conrad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/silcam/lessons-from-luke/issues"
  },
  "homepage": "https://github.com/silcam/lessons-from-luke#readme",
  "dependencies": {
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/express-fileupload": "^0.4.0",
    "@types/jest": "^24.0.11",
    "@types/libxmljs": "^0.18.3",
    "@types/mockdate": "^2.0.0",
    "@types/mustache": "^0.8.32",
    "@types/node": "^11.11.7",
    "@types/supertest": "^2.0.7",
    "body-parser": "^1.18.3",
    "cookie-session": "^1.3.3",
    "express": "^4.16.4",
    "express-fileupload": "^1.0.0",
    "libxmljs": "^0.19.5",
    "mustache": "^3.0.1",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "jest": "^24.5.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.18.10",
    "shipit-cli": "^4.2.0",
    "shipit-deploy": "^4.1.4",
    "shipit-shared": "^4.4.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0"
  }
}
